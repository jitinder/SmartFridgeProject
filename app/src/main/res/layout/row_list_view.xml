<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="20dp"
    android:paddingTop="20dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:singleLine="true"
            android:scrollHorizontally="true"/>

        <TextView
            android:id="@+id/tvExpiryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/grey"/>

        <TextView
            android:id="@+id/tvDataThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textSize="14sp"
            android:textColor="@color/grey"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:padding="5dp"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bMinus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/leftbutton"
            android:textColor="@color/white"
            android:text="@string/minus_symbol"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:background="@drawable/shapenocurves"
            android:gravity="center"/>

        <TextView
            android:id="@+id/bPlus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@drawable/rightbutton"
            android:textColor="@color/white"
            android:text="@string/plus"/>

    </LinearLayout>

    <TextView
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/grey"/>

    <Button
        android:id="@+id/order_button"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        android:layout_gravity="center"
        android:drawableTop="@drawable/ic_shopping_basket_black_24dp"
        android:textSize="10sp"
        style="?android:attr/borderlessButtonStyle"
        android:text="@string/order"/>

</LinearLayout>