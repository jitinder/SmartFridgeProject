<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.team49.ViewFragment"
    android:background="@color/white">

    <ViewFlipper
        android:id="@+id/ingredient_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lvIngredients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"
            android:padding="6dp"/>


        <TextView
            android:id="@+id/ingredient_reload_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/reload_stock"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:drawableBottom="@drawable/ic_refresh_black_24dp"/>

        <TextView
            android:id="@+id/ingredient_empty_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/empty_stock"
            android:textColor="@color/colorAccent"
            android:gravity="center"/>


    </ViewFlipper>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_sort_black_24dp"
        android:tint="@color/white"
        android:backgroundTint="@color/colorPrimary"
        android:layout_margin="16dp"/>
</RelativeLayout>
